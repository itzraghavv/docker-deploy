{
  "name": "repo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:migrate": "cd packages/db && bunx prisma migrate dev && cd ../..",
    "db:generate": "cd packages/db && bunx prisma generate && cd ../..",
    "start:web": "cd apps/web && bun run start",
    "start:http": "cd apps/http-server && bun run index.ts",
    "start:ws": "cd apps/ws-server && bun run index.ts"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}